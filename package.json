{
  "name": "krypton-client",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.itzwilda.kryptonclient",
    "productName": "Krypton Client",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": null
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.3.0"
  }
}
