{
  "name": "krypton-client",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.itzwilda.kryptonclient",
    "productName": "Krypton Client",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "icon": "assets/icons/krypton-logo",  // Path to your icon file (no extension)
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/krypton-logo.png"  // macOS icon (PNG)
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/krypton-logo.ico"  // Windows icon (ICO)
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/krypton-logo.png"  // Linux icon (PNG)
    },
    "publish": null
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.3.0"
  }
}

